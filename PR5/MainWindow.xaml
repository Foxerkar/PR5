<Window x:Class="PR5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" x:Name="ListBoxString"/>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">

            <TextBox x:Name="TextBox" Height="50" Width="150" Margin="20"/>
            <Button Content="Add" Height="50" Width="150" Margin="20" Click="Button_Click"/>
            <Button Content="Delete" Height="50" Width="150" Margin="20" Click="Button_Click_1"/>
            <Button Content="Modify" Height="50" Width="150" Margin="20" Click="Button_Click_2"/>

        </StackPanel>

    </Grid>
</Window>
